<div class="artist">
    {{#each items}}
        <div class="card">
              <div class="imgContainer">
                  {{!-- Great job with the #if. Makes total sense to only display the image if it exists, avoids many errors and ungly UI --}}
                {{#if this.images}}
                     <img src="{{this.images.1.url}}" alt="" width="200">
                 {{else}}
                     <img src="/images/spotify-background.jpeg" alt="" width="100">
                 {{/if}}  
             </div>
            <div class="info"> 
                 <p>{{this.name}}</p>
                    <form action="/albums/{{this.id}}" method="GET">
                         <button type="submit" class="btn">View Albums</button>
                     </form>
             </div>
         </div>
    {{/each}}
 </div>
